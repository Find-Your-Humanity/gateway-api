# 데이터베이스 설정
DB_HOST=your-kakao-mysql-host
DB_PORT=3306
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=realcatcha

# JWT 설정
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# 애플리케이션 설정
ENVIRONMENT=production
DEBUG=false 

# 비밀번호 재설정 토큰 만료 (분)
RESET_TOKEN_TTL_MINUTES=30

# 프론트엔드 도메인 (비밀번호 재설정 링크 생성용)
FRONTEND_URL=https://realcatcha.com

# Google OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://realcatcha.com/auth/google/callback

# 메일 발송 설정 (옵션)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
MAIL_SENDER_EMAIL=no-reply@realcatcha.com
MAIL_SENDER_NAME=RealCatcha